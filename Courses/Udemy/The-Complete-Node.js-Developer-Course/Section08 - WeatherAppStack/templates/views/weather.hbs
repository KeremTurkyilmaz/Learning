<html lang='en'>
  {{>head}}
  <body>
    {{>header}}
    <form id="weather-form">
     <input type="text" placeholder="Type your city here" id="search" autocomplete="off">
     <button>Search</button>
    </form>
    <p id="report"></p>
    {{!-- Load Client Side Javascript --}}
    <script src='./js/main.js'></script>
  </body>
</html>

<style>
  #weather-form {
    max-width: 100%;
    margin: 0 10px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 1px solid lightgrey;
    cursor: pointer;
  }
  #weather-form input {
    flex:8;
    border: none;
  }
  #weather-form input[type="text"] {
    font-family: Helvetica, sans-serif;
    font-size: 5vw;
    color: black;
    letter-spacing: -0.1vw;
  }
  #weather-form input::placeholder {
    color: lightgray;
  }
  #weather-form input:focus-visible {
    outline: none
  }
  #weather-form button {
    flex:2;
    border: none;
    background-color: transparent;
    font-size: 2.5vw;
    color: lightgray;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
  }
  #weather-form button:hover {
    color: black;
    cursor: pointer;
  }
  #report {
    max-width: 50%;
    padding: 0 10px;
    font-size: 3rem;
    letter-spacing: -1px;
    word-spacing: -3.2px; 
  }
</style>